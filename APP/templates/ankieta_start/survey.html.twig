{% extends 'base.html.twig' %}


{% block body %}

    <div class="row justify-content-center">
    <div class="col-10 ">
        <div class="card text-center">
            <div class="card-header">
                <h1>{%trans%}front.survey.header{%endtrans%}</h1>
            </div>
            <div class="card-body">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="step1-tab" data-toggle="tab" href="#step1" role="tab" aria-controls="dateofbirth" aria-selected="true">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="step2-tab" data-toggle="tab" href="#step2" role="tab" aria-controls="profile" aria-selected="false">Profile</a>
            </li>
        </ul>
        <div class="tab-content card-body border border-top-0 " id="myTabContent">

            <div class="tab-pane fade show active" id="step1" role="tabpanel" aria-labelledby="step1-tab">
                {{ form_row(form.DOB) }}
                {{ form_widget(form.next) }}
            </div>
            <div class="tab-pane fade" id="step2" role="tabpanel" aria-labelledby="step2-tab">
                {{ form_row(form.firstName) }}
                {{ form_row(form.lastName) }}
                {{ form_widget(form.back) }}
                {{ form_end(form) }}
            </div>
        </div>

    </div>
        </div></div>
    </div>
{% endblock %}
{% block javascripts %}

{% endblock %}