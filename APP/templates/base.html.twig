<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}{% trans %}home.title{% endtrans %}{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="stylesheet" href="{{ asset('build/style.css') }}">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light border-bottom ">
        <a class="navbar-brand" href="{{path('ankieta')}}">{% trans %}home.nav.header{% endtrans %}</a>
        {% if is_granted('ROLE_ADMIN') %}
            <a class="nav-item nav-link" href="{{path('survey_answer_index_list')}}">Wyniki</a>
            <a class="nav-item nav-link" href="{{path('fos_user_security_logout')}}">{%trans%}main.logout{%endtrans%}</a>
        {%elseif is_granted('ROLE_USER')%}
            <a class="nav-item nav-link" href="{{path('fos_user_security_logout')}}">{%trans%}main.logout{%endtrans%}</a>
        {%else%}
            <a class="nav-item nav-link" href="{{path('fos_user_registration_register')}}">{%trans%}main.register{%endtrans%}</a>
            <a class="nav-item nav-link" href="{{path('fos_user_security_login')}}">{%trans%}main.login{%endtrans%}</a>
        {% endif %}
    </nav>
    <div class="container">
        <div class=" justify-content-lg-center pt-3">
        {% block body %}{% endblock %}
    </div>
</div>
<script src="{{ asset('build/app.js') }}"></script>
{% block javascripts %}{% endblock %}

</body>
</html>
